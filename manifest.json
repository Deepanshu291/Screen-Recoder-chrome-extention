
  {
    "manifest_version": 3,
    "name": "Screen Recorder",
    "version": "1.0",
    "description": "A screen recording extension",
    "permissions": [
      "storage",
      "downloads",
      "scripting",
      "activeTab"
    ],
    "icons": {
        "16": "icon2.png",
        "48": "icon2.png",
        "128": "icon2.png"
      },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
    
  }
  